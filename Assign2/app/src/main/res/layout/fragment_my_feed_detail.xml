<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyFeedDetail">

    <LinearLayout
        android:id="@+id/FeedLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/FeedOwnImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/FeedOwnIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="UserId"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/FeedImage"
        app:layout_constraintTop_toBottomOf="@id/FeedLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="1:1" />

    <LinearLayout
        android:id="@+id/FeedLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/FeedImage"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FeedLikeImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/FeedLikeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="10000"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/FeedLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/FeedLinearLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/FeedFoodInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식에 대한 정보가 나오 TextView 입니다."
            app:layout_constraintTop_toBottomOf="@id/FeedLikeImage"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/FeedMemoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식에 대한 메모가 보이는 TextView 입니다."
            app:layout_constraintTop_toBottomOf="@id/FeedFoodInfoTextView"
            android:layout_weight="2"/>

        <LinearLayout
            android:id="@+id/FeedLinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/FeedOtherImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_launcher_foreground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FeedOtherIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="UserId"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/FeedCommentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="댓글이 표시되는 TextView 입니다."
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/FeedMemoTextView" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>